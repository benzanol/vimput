{
    "manifest_version": 2,
    "name": "vinput",
    "version": "1.0",
    "description": "Simulate vim keybindings in text inputs",
    "permissions": ["debugger", "activeTab", "storage"],
    "background": {
        "scripts": ["dist/background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"]
        }
    ],
    "browser_action": {
        "default_icon": {
            "128": "/resources/icons/off.png"
        }
    },
    "options_page": "./options.html"
}
