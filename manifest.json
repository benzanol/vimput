{
    "manifest_version": 3,
    "name": "vinput",
    "version": "1.0",
    "description": "Simulate vim keybindings in text inputs",
    "permissions": ["debugger", "activeTab", "storage"],
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["dist/content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}
