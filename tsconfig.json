{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["dom", "esnext"],
        "noEmitOnError": true,
        "isolatedModules": true,
        "types": ["chrome"]
    },
    "exclude": ["node_modules", "dist"]
}
